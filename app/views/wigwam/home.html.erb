<% if !current_user %>
    <section>
        <h1>Welcome to Documenter!</h1>
        
        <p>
            A cozy, calm place for you to organize and put your ideas to fruition
        </p>

        <%= button_to "Start now.", new_user_registration_path, method: :get %>
    </section>
<% else %>
    <section >
        <h1 class='text-xlarge-responsive'>Hello <%= current_user.first_name %></h1>
        <h2 class='text-xlarge-responsive'><span data-controller="dancingtext" data-dancingtext-target="text" class="none">Welcome!</span></h2>

        <% if !@any_books %>
            <%= button_to "Create my first book", new_book_path, method: :get, class: "first-book-button" %>
        <% else %>
            <%= button_to "My library", books_path, method: :get %>
        <% end %>

    </section>
<% end %>
