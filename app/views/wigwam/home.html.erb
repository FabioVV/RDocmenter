<% if !current_user %>
    <section>
        <h1>Welcome to Scriptum!</h1>
        
        <p>
            A cozy, calm place for you to organize and put your ideas to fruition
        </p>

        <%= button_to "Start now.", new_user_registration_path, method: :get %>
    </section>
<% else %>
    <section >
        <h1>Hello <%= current_user.first_name%></h1>
        <h2>Ready to write and <span data-controller="dancingtext" data-dancingtext-target="text" class="none">mark stuff down?</span></h2>

    </section>
<% end %>


