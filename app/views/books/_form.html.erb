<h1>Fill out your book title and subtitle</h1>
<%= form_with(model: @book, local:true, class: "book-initial-form") do |f| %>
    <%= render "devise/shared/error_messages", resource: @book %>

    <div class="field">
        <%= f.label :title, class: "book-title-label" %><br />
        <%= f.text_area :title, size: "30x3" %>
    </div>

    <div class="field">
        <%= f.label :subtitle, class: "book-subtitle-label" %><br />
        <%= f.text_area :subtitle, size: "30x3" %>
    </div>

    <br />
    <div class="actions">
        <%= f.submit "Create book/document" %>
    </div>
    <br />

<% end %>
