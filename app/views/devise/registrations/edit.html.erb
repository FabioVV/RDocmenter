
<section class='user-edit-section' data-controller="previewimage">

  <div>
    <div class='user-img-profile'>
      <% if current_user.profile_photo.attached? %>
        <%= image_tag current_user.profile_photo,  data: { action: "click->previewimage#clickOnFileField",  previewimage_target: "preview" }  %>
      <% else %>
        <!-- default image in case the user does not have one here....... -->
        <%= image_tag 'placeholder_book_edit_info.svg', data: { action: "click->previewimage#clickOnFileField",  previewimage_target: "preview" }  %>
      <% end %>
    </div>

    <h4 class='user-name-section'><%= current_user.first_name + " " + current_user.last_name%></h4>

    <hr />

  </div>

  <div>
    <h2>Edit your account</h2> 

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "user-grid-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>



      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true , autocomplete: "first_name"%>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true , autocomplete: "last_name"%>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        <br />
        <i>(leave blank if you don't want to change it)</i>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field" style='display:none;'>
        <label class="user-profile-photo-label" for="user_profile_photo">
          <i class="fa-solid fa-cloud-arrow-up"></i> Change profile image
        </label>
        <%= f.file_field :profile_photo, data: { previewimage_target: "input", action: "change->previewimage#previewImage" } %><br>
      </div>

      <div class="field" id='current_password_one_row'>
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
        <br />
        <i>(we need your current password to confirm your changes)</i>
      </div>

      <div class="actions">
        <br />
        <%= f.submit "Update" %>
      </div>
    <% end %>



    <h3>Delete my account</h3>

    <div>
      Unhappy? 
        <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "This is a destructive action! | You will not be able to access your account anymore." }, method: :delete, class: "delete-account-button" %>
    </div>

    <br />
    <%= link_to "Back", :back %>
  </div>

</section>